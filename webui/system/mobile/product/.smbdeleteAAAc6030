<script type="text/javascript">
$(function() {

    // data vendor
    function vendor(data) {
        if (!data) return
        var html = template('product_item_template', data);
        $('#product-list').attr('data-totalCount', data.result.totalCount).append(html);
    }

    /*
     * scroll to load more content
     */
    var scrollData = new XLJ.ScrollData({
        url: '/Search',
        container: $('.maincontent'),
        target: $('#product-list'),
        success: function(response) {
            vendor(response)
        }
    });

});
</script>
<script type="text/javascript">
    var WEBP = window.WEBP || {}
    try {
        WEBP.Stats().init('from_wechat');
        WEBP.PageLoad().updatePageLoadEndTimestamp();
        WEBP.Stats().upload(30, window.location.pathname);
    } catch(e) {
        console.log(e);
    }
</script>
